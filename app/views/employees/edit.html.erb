<h1> Edit Employee Info </h1>

<%= form_for @employee do |e| %>

<% if @employee.errors.any? %>
<div id="error_explanation">
    <h2>
    <%= pluralize(@employee.errors.count, "error") %>
    prohibited this programmer from being saved:
    </h2>

    <ul>
    <% @employee.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>

<%= e.label :first_name %>
<%= e.text_field :first_name %>
<br><br>
<%= e.label :last_name %>
<%= e.text_field :last_name %>
<br><br>
<%= e.label :alias %>
<%= e.text_field :alias %>
<br><br>
<%= e.label :title %>
<%= e.text_field :title %>
<br><br>
<%= e.label :office %>
<%= e.text_field :office %>
<br><br>
<%= e.label :dog_id %>
<%= e.collection_select :dog_id, Dog.all, :id, :name, prompt: true%>
<br><br>
<%= e.label :img_url %>
<%= e.text_field :img_url %>
<br><br>
<%= e.submit %>
<% end %>